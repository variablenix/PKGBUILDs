post_install() {
  echo  "1. See the INSTALL file in /usr/share/docs/automx/ for further instructions and info on setting up the needed DNS. Note automx requires an HTTP server such as Apache with mod_wsgi or Nginx with uwsgi."
  echo  "2. Examples => /usr/share/automx/conf"
}

post_upgrade() {
  post_install $1
}

post_remove() {
  echo
}

